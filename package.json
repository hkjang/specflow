{
  "name": "specflow-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "npm run start:dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "seed": "npm run seed --workspace=apps/api",
    "package:offline": "powershell -ExecutionPolicy Bypass -File ./scripts/build-offline.ps1",
    "db:generate": "npm run db:generate --workspace=apps/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}